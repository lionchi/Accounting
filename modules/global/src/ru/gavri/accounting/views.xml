    <view class="ru.gavri.accounting.entity.DisplayEntity"
          extends="_local"
          name="displayEntity-view">
        <property name="pk"
                  view="_minimal"/>
    </view>
    <view class="ru.gavri.accounting.entity.HddEntity"
          name="hddEntity-view">
